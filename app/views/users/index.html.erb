<div class="grid gap-20 grid-flow-row">
  <section class="mt-10 mx-5">
    <%= form_with url: "/users", method: :get, class: "flex flex-row space-x-10 text-lg" do |form| %>
      <%#= form.label :first_name, 'Search for:' %>
      <%#= form.search_field :first_name %>
      <%#= form.submit "Search" %>
      <div class="space-x-2">
        <%= form.label :email, 'Email' %>
        <%= form.email_field :email, placeholder: 'Search users with Email', class: 'focus:border-sky-500 rounded-md' %>
      </div>
      <div class="space-x-2">
        <%= form.label :Gender, 'Gender' %>
        <%= form.select :gender, [['Male', 'male'], ['Female', 'female']], prompt: 'Selcect Gender' %>
      </div>
      <div class="space-x-2">
        <%= form.label :start_date %>
        <%= form.date_field :start_date %>
      </div>
      <div class="space-x-2">
        <%= form.label :end_date %>
        <%= form.date_field :end_date %>
      </div>
        <%= form.submit "Search", class: 'bg-green-400 rounded-lg border-2 w-20 hover:bg-yellow-500' %>
    <% end %>
  </section>
  

  <div class="flex mx-12">
    <table class="w-full  table-auto border-collapse border border-slate-400">
      <thead class="size-16">
        <tr class="">
          <th class="border border-slate-400" scope="col">Id</th>
          <th class="border border-slate-400" scope="col">First Name</th>
          <th class="border border-slate-400" scope="col">Last Name</th>
          <th class="border border-slate-400" scope="col">Email</th>
          <th class="border border-slate-400" scope="col">Mobile Number</th>
          <th class="border border-slate-400" scope="col">Gender</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% @users.each do |user | %>
          <tr class="size-16">
            <td class="border border-slate-400 " scope="row"><%= user.id %></td>
            <td class="border border-slate-400"><%= user.first_name %></td>
            <td class="border border-slate-400"><%= user.last_name %></td>
            <td class="border border-slate-400"><%= user.email %></td>
            <td class="border border-slate-400"><%= user.mobile_number %></td>
            <td class="border border-slate-400"><%= user.gender %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
